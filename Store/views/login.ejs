<body>
    <!-- main -->
    <div class="main-w3layouts wrapper">

        <h1>SignUp Form</h1>
        <div class="main-agileinfo">
            <div class="agileits-top">
                <% if(title == "Store Signup") {%>
                <form method="post" action="/register">
                    <input class="text" type="text" name="name" id="uname" placeholder="Username" required="">
                    <input class="email" type="email" name="email" placeholder="Email" required="">
                    <input class="text" type="text" name="address" id="address" placeholder="Business Address" required=""> <br>
                    <input class="text" type="text" name="number" id="number" placeholder="Contact Number" required=""> <br>
                    <input class="text" type="password" name="password" placeholder="Password" required="">
                    <input type="submit" value="SIGNUP">
                </form>
                <p>Have an Account? <a href="http://localhost:3001/"> Log In Now!</a></p>
                <%}else {%>
                <form id="form" method="post" action="/authenticate">
                    <input class="text email" type="email" name="email" placeholder="Email" required="">
                    <input class="text" type="password" name="password" placeholder="Password" required="">
                    <input type="submit" value="LOGIN">
                </form>
                <p>Don't have an Account? <a href="http://localhost:3001/signup"> Sign Up Now!</a></p>
                <%}%>
			</div>
		</div>
